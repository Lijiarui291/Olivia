#include<iostream>
#include<string>
#include<cstdio>
#include<algorithm>
using namespace std;

char table[31][40];

int main(){
	int m;
	cin>>m;

	for(int i=0;i<=30;i++){
		for(int j=0;j<40;j++){
			table[i][j]=' ';
		}
	}
	
	for(int i=0;i<2*m-1;i++){
		table[15][i]='-';
	}

	int top=15,bottom=15;

	for(int i=0;i<m;i++){
		int num;
		char c;
		scanf("%d%c",&num,&c);

		top=min(top,15-num);
		bottom=max(bottom,15-num);
		
		if(num<0){
			for(int j=16;j<16-num;j++){
				if(c==' '||c=='\n') table[j][2*i]='+';
				else table[j][2*i]=c;
			}
		}
		else if(num>0){
			for(int j=14;j>14-num;j--){
				if(c==' '||c=='\n') table[j][2*i]='+';
				else table[j][2*i]=c;
			}
		}
	}
	
	for(int i=top;i<=bottom;i++){
		for(int j=0;j<2*m-1;j++){
			printf("%c",table[i][j]);
		}
		printf("\n");
	}
	return 0;
}
