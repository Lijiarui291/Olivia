 #include <stdio.h>
  int main()
  {    
  int n, h = 0;//符号数空格数    
  int i = 0;    
  scanf("%d", &n);    
  n = n * 2 - 1;         
  while(n>0)    
  {              
  for(i = 0; i < h; i++)//输空格                                
  printf(" ");              
  for(i = 0; i < n; i++)                    
  printf("*");//输符号               
  printf("\n");              
  n = n - 2;              
  h++;     }          
  return 0;
  }
